<div class="container">
  {{>_msg}}
<h3>Redes Wi-fi cadastradas:</h3>
{{#if table}}
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Senha</th>
      <th scope="col">Rua</th>
      <th scope="col">Nº</th>
      <th scope="col">Estado</th>
      <th scope="col">País</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each redes}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{nome}}</td>
      <td>{{senha}}</td>
      <td>{{endereco}}</td>
      <td>{{numero}}</td>
      <td>{{estado}}</td>
      <td>{{pais}}</td>
      <td>
        <div class="row">            
            <div class="col-4">
              <form action="/editar" method="POST">
              <input type="hidden" name="id" value="{{id}}">
              <button class="w-100 btn btn-info">Editar</button>
              </form>
                 
            </div>
            <div class="col-4">
                <button class="w-100 btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal_{{id}}" >Deletar</button>    
            </div>                  
        </div>
        
        </td>
    </tr>

    <!-- Modal -->
<div class="modal fade" id="deleteModal_{{id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Confirmação</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body fw-bold text-danger">
        Tem certeza que deseja excluir a rede {{nome}}?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sair</button>
        <form action="/deletar" method="post">
          <input type="hidden" name="id" value="{{id}}">
          <button type="submit" class="btn btn-danger">Sim, quero deletar!</button>
        </form>
        
      </div>
    </div>
  </div>
</div>

    {{/each}}
  </tbody>

  
</table>

{{else}}
<div class="card mt-4">
  <div class="card-body">
    Nenhuma rede cadastrada!
  </div>
</div>
<br>
{{/if}}



<a href="/cadastrorede"><button type="button" class="btn btn-dark btn-lg">Inserir nova rede</button></a>





</div>
