<section class="vh-100" style="background-color: #6466e6;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Cadastre sua rede já</h3>
            {{>_buttons}}
            {{>_msg}}

            <form action="/cadastrorede" method="POST" >
            <div class="form-outline mb-4">
              <input type="text" name="nome" class="form-control form-control-lg" />
              <label class="form-label" for="typeEmailX-2">Nome da rede</label>
            </div>

            <div class="form-outline mb-4">
              <input type="text" name="senha" class="form-control form-control-lg" />
              <label class="form-label" for="typeEmailX-2">Senha</label>
            </div>

            <div class="form-outline mb-4">
              <input type="text" name="endereco" class="form-control form-control-lg" />
              <label class="form-label" for="typeEmailX-2">Endereço</label>
            </div>

            <div class="form-outline mb-4">
              <input type="number" name="numero" class="form-control form-control-lg" />
              <label class="form-label" for="typeEmailX-2">Número</label>
            </div>

            <div class="form-outline mb-4">
              <input type="text" name="estado" class="form-control form-control-lg" />
              <label class="form-label" for="typeEmailX-2">Estado</label>
            </div>

            <div class="form-outline mb-4">
              <input type="text" name="pais" class="form-control form-control-lg" />
              <label class="form-label" for="typeEmailX-2">País</label>
            </div>

            


            <button class="btn btn-primary btn-lg btn-block btn btn-success" type="submit">Cadastrar</button>
            
            
            </form> 
            

          </div>
        </div>
      </div>
    </div>
  </div>
</section>